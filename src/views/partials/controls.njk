{% set public_routes = 'public_routes' | getParam %}
<div class="header">
    <input type="checkbox" id="menu-toggle" class="header--checkbox">
    <label for="menu-toggle" class="header--toggle">🌐</label>
    <div class="header--items">
        <button onclick="javascript:window.close()"><em>🚪</em>Exit</button>
        <button id="dashboard--qrcode"
                onclick="showDialog('#qrcode_dialog', '🔗 Dashboard Link', 'This link will open the dashboard<br>on any device on your network.')">
            <em>🔗</em>Show QR
        </button>
        <button onclick="javascript:window.parent.location.href='{{ public_routes.PUBLIC_DASHBOARD }}'"><em>🥷</em>Dev</button>
        <button onclick="javascript:window.parent.location.href='{{ public_routes.PUBLIC_INDEX }}'"><em>🧑</em>User</button>
        <button onclick="javascript:socketEmitReload()"><em>🔄</em>Reload</button>
        <button onclick="javascript:getURL('{{ public_routes.TWITCH_LOGIN }}')"><em>🔒</em>Login</button>
        <button onclick="javascript:getURL('{{ public_routes.PUBLIC_MODULES }}')"><em>🎬️</em>Displays</button>
        <button onclick="javascript:getURL('{{ public_routes.PUBLIC_SETTINGS }}')"><em>⚡</em>Settings</button>
        <button class="dashboard--spare1" onclick="javascript:getURL('{{ public_routes.PUBLIC_DASHBOARD }}')">
            <em>🌀</em>Dashboard
        </button>
        <button id="dashboard--toggle">Toggle Feature</button>
    </div>
</div>