{% macro qrcode_dialog(id) %}
    {% set device_ip = 'device_ip' | getParam %}
    {% set public_routes = 'public_routes' | getParam %}
    <dialog class="dialog-container" id="{{ id }}">
        <div class="dialog--title">Default Title</div>
        <div class="dialog--body">This is the default body content of the dialog.</div>
        <canvas id="qr-code-dialog-canvas" data-url="https://{{ device_ip  }}{{ public_routes.PUBLIC_DASHBOARD }}"></canvas>
        <button onclick="javascript:closeDialog('{{ id }}')">âœ…Done</button>
    </dialog>
{% endmacro %}